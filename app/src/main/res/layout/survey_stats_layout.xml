<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">
        <TextView
            android:id="@+id/headerTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/upload_header_margin_vert"
            android:layout_marginBottom="@dimen/upload_header_margin_vert"
            android:text="@string/upload_to_server"
            android:textSize="@dimen/header_text_size"
            android:textColor="#242424" />

        <LinearLayout
            android:id="@+id/valueColumn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/headerTV"
            android:gravity="right"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/data_fields_margin">

            <!--<android.support.v4.widget.Space-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_weight="0.4" />-->

            <TextView
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:gravity="right"
                android:text="Already Uploaded" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="right"
                android:text="To be Uploaded" />
        </LinearLayout>

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/valueColumn"
            android:background="@drawable/box"
            android:layout_marginTop="@dimen/table_layout_margin_vert"
            android:padding="@dimen/data_table_padding">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="@string/plant_samp"
                    android:textSize="@dimen/data_fields_text_size" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:gravity="center_vertical|right"
                    android:text="0"
                    android:textSize="@dimen/data_fields_text_size"
                    android:id="@+id/pSAU" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:gravity="center_vertical|right"
                    android:text="0"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/data_fields_text_size"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/pSTBU" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/seperator_line_height"
                android:layout_marginBottom="@dimen/separator_line_margin"
                android:layout_marginTop="@dimen/separator_line_margin"
                android:background="@android:color/black" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="@string/sdp_samp"
                    android:textSize="@dimen/data_fields_text_size" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:gravity="center_vertical|right"
                    android:text="0"
                    android:textSize="@dimen/data_fields_text_size"
                    android:id="@+id/sDPSAU" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:gravity="center_vertical|right"
                    android:text="0"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/data_fields_text_size"
                    android:id="@+id/sDPSTBU" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/seperator_line_height"
                android:layout_marginBottom="@dimen/separator_line_margin"
                android:layout_marginTop="@dimen/separator_line_margin"
                android:background="@android:color/black" />
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="@string/other_works_samp"
                    android:textSize="@dimen/data_fields_text_size" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:gravity="center_vertical|right"
                    android:text="0"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/data_fields_text_size"
                    android:id="@+id/oWSAU" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:gravity="center_vertical|right"
                    android:text="0"
                    android:textSize="@dimen/data_fields_text_size"
                    android:id="@+id/oWSTBU" />
            </TableRow>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/seperator_line_height"
                android:layout_marginBottom="@dimen/separator_line_margin"
                android:layout_marginTop="@dimen/separator_line_margin"
                android:background="@android:color/black" />
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="@string/scp_n_tsp_samp"
                    android:textSize="@dimen/data_fields_text_size" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:gravity="center_vertical|right"
                    android:text="0"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/data_fields_text_size"
                    android:id="@+id/sNTSAU" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:gravity="center_vertical|right"
                    android:text="0"
                    android:textSize="@dimen/data_fields_text_size"
                    android:id="@+id/sNTSTBU" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/seperator_line_height"
                android:layout_marginTop="@dimen/separator_line_margin"
                android:layout_marginBottom="@dimen/separator_line_margin"
                android:background="@android:color/black" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="@string/advance_work_samp"
                    android:textSize="@dimen/data_fields_text_size" />

                <TextView
                    android:id="@+id/sAdAU"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:gravity="center_vertical|right"
                    android:text="0"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/data_fields_text_size" />

                <TextView
                    android:id="@+id/sAdTBU"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:gravity="center_vertical|right"
                    android:text="0"
                    android:textSize="@dimen/data_fields_text_size" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/seperator_line_height"
                android:layout_marginTop="@dimen/separator_line_margin"
                android:layout_marginBottom="@dimen/separator_line_margin"
                android:background="@android:color/black" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="@string/nursery_work_samp"
                    android:textSize="@dimen/data_fields_text_size" />

                <TextView
                    android:id="@+id/sNUAU"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:gravity="center_vertical|right"
                    android:text="0"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/data_fields_text_size" />

                <TextView
                    android:id="@+id/sNUTBU"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:gravity="center_vertical|right"
                    android:text="0"
                    android:textSize="@dimen/data_fields_text_size" />
            </TableRow>
        </TableLayout>

        <!-- <Button
             android:id="@+id/btnUploadData"
             android:layout_width="@dimen/upload_btn_width"
             android:layout_height="@dimen/upload_btn_height"
             android:layout_below="@+id/tableLayout"
             android:layout_centerHorizontal="true"
             android:layout_marginTop="@dimen/upload_btn_margin_vertical"
             android:padding="5dp"
             android:textSize="@dimen/upload_btn_text_size"
             android:text="Upload Now" />-->

        <Button
            android:id="@+id/btnUploadData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tableLayout"
            android:layout_centerHorizontal="true"
            android:text="Upload forms to server"
            android:textAlignment="center"
            android:textSize="@dimen/submit_button_textsize"
            android:theme="@style/Def_MyButton" />
    </RelativeLayout>


</ScrollView>
